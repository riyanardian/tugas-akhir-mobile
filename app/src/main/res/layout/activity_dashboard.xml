<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        tools:context=".DashboardActivity">

        <!-- ViewPager2 untuk menampilkan menu yang bisa digeser -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerMenu"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <!-- Tombol untuk menambah resep -->
        <Button
            android:id="@+id/btnTambahResep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Resep"
            android:layout_marginTop="16dp"/>

        <!-- Tombol untuk melihat resep -->
        <Button
            android:id="@+id/btnLihatResep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Resep" />
        <Button
            android:id="@+id/btnLogout"
            android:text="Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


